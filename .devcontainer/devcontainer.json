{
  "name": "GaleMind Server Dev Environment",
  "dockerComposeFile": "../docker-compose.dev.yml",
  "service": "galemind-server",
  "workspaceFolder": "/workspaces/galemind-server",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.12"
    },
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "username": "vscode",
      "userUid": "1000",
      "userGid": "1000"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer",
        "ms-python.python",
        "ms-python.pylint",
        "ms-python.black-formatter",
        "vadimcn.vscode-lldb",
        "serayuzgur.crates"
      ],
      "settings": {
        "rust-analyzer.cargo.allFeatures": true,
        "rust-analyzer.checkOnSave.command": "clippy"
      }
    }
  },
  "forwardPorts": [8080, 50051, 5000],
  "portsAttributes": {
    "8080": {
      "label": "REST API",
      "onAutoForward": "notify"
    },
    "50051": {
      "label": "gRPC API",
      "onAutoForward": "notify"
    },
    "5000": {
      "label": "MLflow UI",
      "onAutoForward": "notify"
    }
  },
  "postCreateCommand": "cargo build",
  "remoteUser": "vscode",
  "mounts": [
    "source=${localWorkspaceFolder}/models,target=/workspaces/galemind-server/models,type=bind,consistency=cached"
  ]
}